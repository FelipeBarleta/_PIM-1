@model _PIM.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="modal-overlay">
    <div class="login-modal">
        <h2>@ViewData["Title"]</h2>

        <!-- Exibir mensagem de sucesso -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post" class="login-form" novalidate>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu email" autocomplete="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" autocomplete="current-password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Lembrar-me</label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        </form>

        <div class="register-link text-center">
            <p>Não tem uma conta? <a asp-controller="Account" asp-action="Register">Registre-se aqui</a></p>
        </div>
    </div>
</div>
